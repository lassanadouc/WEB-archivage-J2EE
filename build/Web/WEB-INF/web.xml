    <servlet-mapping>
        <servlet-name>Servbefore_Add_user</servlet-name>
        <url-pattern>/Servbefore_Add_user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UtilisateurServlet</servlet-name>
        <url-pattern>/UtilisateurServlet</url-pattern>
    </servlet-mapping>
