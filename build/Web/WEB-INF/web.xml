        <servlet-name>DataServlet</servlet-name>
        <servlet-class>Code.DataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListDepartServlet</servlet-name>
        <servlet-class>Code.ListDepartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilesUploadServlet</servlet-name>
        <servlet-class>Code.FilesUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servbefore_Add_user</servlet-name>
        <servlet-class>Code.Servbefore_Add_user</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UtilisateurServlet</servlet-name>
        <servlet-class>controller.UtilisateurServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/UserLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogoutServlet</servlet-name>
        <url-pattern>/UserLogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInsertServlet</servlet-name>
        <url-pattern>/UserInsertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DepartementInsertServlet</servlet-name>
